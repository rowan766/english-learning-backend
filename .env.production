# .env.production
# 生产环境配置文件

# 应用配置
NODE_ENV=production
PORT=8002
APP_PORT=8002

# AWS 配置
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Polly 配置 (语音合成)
# 确保你的AWS账户有Polly服务权限

# 缓存配置
CACHE_TTL=3600

# 文件上传限制
MAX_FILE_SIZE=50MB

# 日志级别
LOG_LEVEL=info

# CORS配置 (如果需要)
CORS_ORIGIN=*

# 数据库配置 (如果以后需要)
# DATABASE_URL=

# Redis配置 (如果以后需要缓存)
# REDIS_URL=